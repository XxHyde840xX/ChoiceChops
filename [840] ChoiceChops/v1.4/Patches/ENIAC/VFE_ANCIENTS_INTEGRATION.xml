<?xml version="1.0" encoding="utf-8"?>

<Patch>
    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>Vanilla Factions Expanded - Ancients</li>
        </mods>
        <match Class="PatchOperationSequence">
            <success>Always</success>
            <operations>
                <li Class="PatchOperationAdd">
                    <xpath>/Defs/ThingDef[defName="VFEA_GeneTailoringPod"]/comps/li[@Class ="CompProperties_AffectedByFacilities"]/linkableFacilities</xpath>
                    <value>
                        <li>840_ENIAC</li>
                    </value>
                </li>
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/StatDef[defName="VFEA_FailChance"]/minValue</xpath>
                    <value>
                        <minValue>-1000</minValue>
                    </value>
                </li>
            </operations>
        </match>
    </Operation>
</Patch>